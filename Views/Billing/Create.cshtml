@model HospitalManagementSystem.Models.Billing
@{
    ViewData["Title"] = "Add Billing Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Add Billing Entry</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="PatientName" class="form-label">Patient Name</label>
        <input asp-for="PatientName" class="form-control" />
        <span asp-validation-for="PatientName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Treatment" class="form-label">Treatment</label>
        <input asp-for="Treatment" class="form-control" />
        <span asp-validation-for="Treatment" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Amount (₹)</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BillingDate" class="form-label">Billing Date</label>
        <input asp-for="BillingDate" type="date" class="form-control" />
        <span asp-validation-for="BillingDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
</form>
