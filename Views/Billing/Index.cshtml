@model IEnumerable<HospitalManagementSystem.Models.Billing>
@{
    ViewData["Title"] = "Billing Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Billing Records</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add Bill</a>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Patient Name</th>
            <th>Treatment</th>
            <th>Amount (₹)</th>
            <th>Billing Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.Id</td>
                <td>@bill.PatientName</td>
                <td>@bill.Treatment</td>
                <td>@bill.Amount</td>
                <td>@bill.BillingDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
