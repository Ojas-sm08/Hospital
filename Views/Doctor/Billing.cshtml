@{
    Layout = "~/Views/Shared/_Layout.Doctor.cshtml";
    ViewData["Title"] = "Doctor Billing";
}

<h2 class="mb-4">💰 Billing</h2>

<p>This is a placeholder for doctor billing-related information.</p>

<!-- Example Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Date</th>
            <th>Service</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>John Doe</td>
            <td>@DateTime.Today.ToShortDateString()</td>
            <td>Consultation</td>
            <td>₹500</td>
        </tr>
        <tr>
            <td>Jane Smith</td>
            <td>@DateTime.Today.AddDays(-1).ToShortDateString()</td>
            <td>Follow-up</td>
            <td>₹300</td>
        </tr>
    </tbody>
</table>
